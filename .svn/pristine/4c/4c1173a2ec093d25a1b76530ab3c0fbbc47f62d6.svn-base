    <script>
        $('#craftPersonId').combotreegrid({


            collapsible: true,
            fitColumns: true,
            url: '/Emmployee/GetAllStaffAndDepartment',
            idField: 'allID',
            animate: true,
            treeField: 'staff',
            method: 'get',
            rownumbers: true,
            //checkbox: true,
            columns: [[
                { title: '部门人员', field: 'staff', width: '100%' }


            ]]
             , onLoadSuccess: function (data) {
                 $('.tree-folder.tree-folder-open').removeClass('tree-folder tree-folder-open')
                 $('.tree-icon').removeClass('tree-icon tree-file')
                 $(".datagrid-view1").remove()
                 $(".datagrid-view2").css('left', '0')
                 $('[modify="1"]').addClass('layui-btn-disabled').attr('disabled', 'disabled')
                 $('[delete="1"]').addClass('layui-btn-disabled').attr('disabled', 'disabled')
                 $('.panel-body').css('border-color', 'white')






             }
        })
        layui.use(['form', 'laydate'], function () {
            var form = layui.form, laydate = layui.laydate;
            //日期
            laydate.render({
                elem: '#planStartTime',
                type: 'datetime',
                trigger: 'click' //采用click弹出
            });
            laydate.render({
                elem: '#planEndTime',
                type: 'datetime',
                trigger: 'click' //采用click弹出
            });
            form.on('submit(*)', function (data) {

                layer.confirm("是否提交", function () {
             
                 
                    if ( !switchState) {
                        var formData = new FormData();

                        formData.append('parentId', componentID);
                        formData.append('compontId', id);
                        formData.append('compontName', data.field.compontName);
                        formData.append('compontNum', data.field.compontNum);
                        formData.append('planStartTime', data.field.planStartTime);
                        formData.append('planEndTime', data.field.planEndTime);

                     
              
                        $.ajax({
                            url: "/Task/AlterCompontNoCraftMethod",
                            type: 'post',
                            data: formData,
                            processData: false,
                            contentType: false,
                            success: function (res) {
                                if (res == "ok") {
                                    layer.msg("修改成功", { icon: 1, time: 1000 }, function () {
                                        var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                                        parent.layer.close(index); //再执行关闭    
                                        parent.tgReload()
                                    })
                                } else { layer.alert(res) }
                            }
                        })
                    } else {
                        var formData = new FormData();

                        formData.append('parentId', componentID);
                        formData.append('compontId', id);
                        formData.append('compontName', data.field.compontName);
                        formData.append('compontNum', data.field.compontNum);
                        formData.append('planStartTime', data.field.planStartTime);
                        formData.append('planEndTime', data.field.planEndTime);

                        var g = $('#craftPersonId').combotreegrid('grid'); // 获取数据表格对象
                        var r = g.datagrid('getSelected'); // 获取选择的行

                        formData.append('craftPersonId', r.id);
                        var previewCategoryStr = "";
                        for (var i = 0; i < arr.length; i++) {
                            if (typeof (data.field[arr[i].id]) != "undefined") {
                                previewCategoryStr += arr[i].id + ",";
                            }
                        }
                        formData.append('previewCategoryStr', previewCategoryStr);
                        debugger
                        $.ajax({
                            url: "/Task/AlterCompontMethod",
                            type: 'post',
                            data: formData,
                            processData: false,
                            contentType: false,
                            success: function (res) {
                                if (res == "ok") {
                                    layer.msg("修改成功", { icon: 1, time: 1000 }, function () {
                                        var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                                        parent.layer.close(index); //再执行关闭    
                                        parent.tgReload()
                                    })
                                } else { layer.alert(res) }
                            }
                        })
                    }
            
                })

                return false; //阻止表单跳转。如果需要表单跳转，去掉这段即可。
            });
        });
        function fun(componentID1, id1, taskName1, taskNum1, planStartTimeStr1, planEndTimeStr1, allID1, previewCategoryStr1) {
            componentID = componentID1;
            id = id1;
            previewCategoryArr = previewCategoryStr1.split(',');
            allID = allID1;
            $('[name="compontName"]').val(taskName1)
            $('[name="compontNum"]').val(taskNum1)
            $('[name="planStartTime"]').val(planStartTimeStr1.replace('/', '-').replace('/', '-') + ":00")
            $('[name="planEndTime"]').val(planEndTimeStr1.replace('/', '-').replace('/', '-') + ":00")



            if (allID1 == "" | allID1 == null) {
                switchState=false;
                $('[name="planEndTime"]').parents('.layui-form-item').after(` <div class="layui-form-item">
            <label class="layui-form-label" style="width: 120px">添加工艺</label>
            <div class="layui-input-block">
                <input type="checkbox" name="checkbox" lay-skin="switch" lay-text="ON|OFF" lay-filter="checkbox" >
            </div>
        </div>`)
                $('[name="craftPersonId"]').parents('.layui-form-item').remove();
                $('#checkbox').parents('.layui-form-item').remove();
                layui.use('form',function(){
                    var form=layui.form;
                    form.render();
                    form.on('switch(checkbox)', function (data) {
              
             
                        if(data.elem.checked){
                            switchState=true;
                            var html=`
                                  <div class="layui-form-item" style="margin-right: 15px">
                        <label class="layui-form-label" style="width: 120px">工艺责任人<span style="color: red">*</span></label>
