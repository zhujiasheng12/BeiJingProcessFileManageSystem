                            $('#checkbox').parents('.layui-form-item').remove();
                        }
                    });
                })
                $('#craftPersonId').combotreegrid('setValue', { allID: allID1 });
            }
           
            $.ajax({
                url: '/Task/GetAllCompontPreviewCategory',
                type: 'post',
                success: function (res) {
                    arr = res;
                    for (var i = 0; i < res.length; i++) {
                        if (previewCategoryArr.indexOf(res[i].Name) == -1) {
                            $("#checkbox").append('<input type="checkbox" name="' + res[i].id + '" title="' + res[i].Name + '" lay-verify="required">')
                        } else {
                            $("#checkbox").append('<input type="checkbox" name="' + res[i].id + '" title="' + res[i].Name + '" lay-verify="required" checked>')
                        }

                    }
                    layui.use('form', function () { layui.form.render() })
                }
            })


            if (Number(id) != 0) {

                $('[name="compontName"]').parent().siblings('label').text("");
                $('[name="compontName"]').parent().siblings('label').append('组件名<span style="color:red">*</span>')
