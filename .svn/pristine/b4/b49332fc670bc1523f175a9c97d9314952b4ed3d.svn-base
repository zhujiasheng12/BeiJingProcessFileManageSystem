           // alert(positionId)
            $('[name="positionName"]').val(positionName)

            $('#tree').treegrid({
                url: '/Emmployee/GetAuthorityByPositionMethod?positionId=' + positionId,

                method: 'post',
                idField: 'id',
                treeField: 'authorityName',

                checkbox: true,
