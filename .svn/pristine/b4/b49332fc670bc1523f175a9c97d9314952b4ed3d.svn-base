                columns: [[
                    { title: '勾选权限', field: 'authorityName', width: '100%' },
                    { title: 'id', field: 'id', width: 180, hidden: true },
                ]],
                onLoadSuccess: function () {
                    $('.tree-icon ').remove()
                    $('td').css('border', 'none')
                    $('.panel-body').css('border-color', 'white')
