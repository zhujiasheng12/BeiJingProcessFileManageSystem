        $.ajax({
            url: '/Emmployee/Check',
            async: false,
            success: function (obj) {
             
                var limit = obj.limlt.split(',');
                sessionStorage.setItem("loginId", obj.id);
                sessionStorage.setItem("processTypeStr", obj.processTypeStr);
                $("#id").val(obj.id)
                if (obj.name == null | obj.name == "") {
                    location.href = '/Home/Login'
                }
                else {



                    $('#userName')[0].childNodes[2].data = obj.name

                    for (var i = 0; i < limit.length; i++) {
                        $('[limit="' + limit[i] + '"]').remove()
                    }
                  

                }

            }
        })
      
        setTimeout(function () { $($('[click]')[0]).click() }, 100)
