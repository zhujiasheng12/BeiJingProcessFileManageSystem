                data.field.passWord = '123456';
                layer.confirm("是否提交", function (index) {
                    $.ajax({
                        url: '/Emmployee/AddEmployeeMethod',
                        type: 'POST',
                      
                        data: data.field,
                        success: function (d) {
                            if (d == "ok") {
                                layer.close(index)
